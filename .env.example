# ====================
# Environment Variables
# ====================

# Grok API Configuration
# Get your API key from: https://console.x.ai/
GROK_API_KEY=your-grok-api-key-here

# Database URLs (for local development outside Docker)
AUTH_DB_URL=postgresql://postgres:postgres@localhost:5432/auth_db
USER_DB_URL=postgresql://postgres:postgres@localhost:5433/user_db
CAREER_DB_URL=postgresql://postgres:postgres@localhost:5434/career_db
AI_DB_URL=postgresql://postgres:postgres@localhost:5435/ai_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Service URLs (when running locally)
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
CAREER_SERVICE_URL=http://localhost:3003
AI_SERVICE_URL=http://localhost:3004

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# API Gateway
PORT=3000
CORS_ORIGIN=http://localhost:5173

# Node Environment
NODE_ENV=development
